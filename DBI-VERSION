# -*-shell-script-*-

PACKAGE=guile-dbi

# dnl     4a) Increment when removing or changing interfaces.
DBI_MAJOR_VERSION=2

# dnl     4a) 5) Increment when adding interfaces.
# dnl     6) Set to zero when removing or changing interfaces.
DBI_MINOR_VERSION=1

# dnl     3) Increment when interfaces not changed at all,
# dnl               only bug fixes or internal changes made.
# dnl     4b) Set to zero when adding, removing or changing interfaces.
DBI_MICRO_VERSION=6

DBI_EFFECTIVE_VERSION=${DBI_MAJOR_VERSION}.${DBI_MINOR_VERSION}
DBI_VERSION=${DBI_EFFECTIVE_VERSION}.${DBI_MICRO_VERSION}
VERSION=${DBI_VERSION}

# dnl Version info for libraries = CURRENT:REVISION:AGE
DBI_ITF_CURRENT=${DBI_MAJOR_VERSION}
DBI_ITF_REVISION=${DBI_MICRO_VERSION}
DBI_ITF_AGE=0
DBI_INTERFACE="${DBI_ITF_CURRENT}:${DBI_ITF_REVISION}:${DBI_ITF_AGE}"

